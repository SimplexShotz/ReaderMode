{
  "name": "Reader Mode for Chrome",
  "version": "1.0",
  "description": "Makes webpages more reader-friendly.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "manifest_version": 2
}
